<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Biblioteca Regional</title>
    
    <link rel="stylesheet" href="/styles/global.css">
    <link rel="stylesheet" href="/styles/<%= page %>.css">
    <link rel="stylesheet" href="/styles/responsive.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap" rel="stylesheet">

    <script src="/scripts/editPerfil.js" defer type="module"></script>

</head>
<body>
    <div class="content">
        <header>
            <div class="navBarr">
                <!-- <div class="booksDirectory">
                    <a href="/location" class="buttons">Doar livros</a>
                    <a href="/getBook" class="buttons">Pegar emprestado</a>
                </div> -->
                <div class="searchBook">
                    <form action="/searchBook" style="align-items: center;">
                        <input type="search" name="search" id="search" placeholder="nome/autor/gÃªnero">
                        <button type="submit">Pesquisar</button>
                    </form>
                </div>
                
                <div class="userInfo">
                    <% if(user != null){ %>
                        <a href="/perfil/<%= user.id %>"><%= user.name %></a>
                        <% }else{ %>
                        <a href="/login" class="buttons">Registrar/login</a>
                    <% } %>
                </div>

                <div class="userIcon">
                    <% if(user != null){ %>
                        <a href="/perfil/<%= user.id %>" class="profileIcon"></a>
                        <% }else{ %>
                        <a href="/login" class="loginIcon"></a>
                    <% } %>
                </div>

            </div>
        </header>

        <%- include(`parts/${page}`)%>
    </div>
</body>
</html>